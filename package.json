{
  "name": "hornet",
  "version": "0.1.0",
  "main": "dist/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run build && electron .",
    "build:main": "bun build src/main.ts --outdir dist --target node --external electron",
    "build:preload": "bun build src/preload.ts --outdir dist --target node --external electron --format=cjs",
    "build:css": "mkdir -p dist/renderer && postcss src/renderer/styles.css -o dist/renderer/styles.css",
    "build:html": "bun build src/renderer/index.html --outdir dist/renderer",
    "build:inject-css": "sed -i 's|</title>|</title>\\n  <link rel=\"stylesheet\" href=\"./styles.css\">|' dist/renderer/index.html",
    "build:renderer": "bun run build:css && bun run build:html && bun run build:inject-css",
    "build": "bun run build:main && bun run build:preload && bun run build:renderer",
    "package": "bun run build && electron-builder",
    "package:linux": "bun run build && electron-builder --linux",
    "package:mac": "bun run build && electron-builder --mac",
    "package:win": "bun run build && electron-builder --win",
    "package:all": "bun run build && electron-builder -mwl"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bun": "latest",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.0"
  },
  "build": {
    "appId": "com.hornet.app",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    }
  }
}
