{
  "name": "hornet",
  "version": "0.1.0",
  "main": "dist/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run build && electron .",
    "build:main": "bun build src/main.ts --outdir dist --target node --external electron",
    "build:preload": "bun build src/preload.ts --outdir dist --target node --external electron --format=cjs",
    "build:css": "mkdir -p dist/renderer && postcss src/renderer/styles.css -o dist/renderer/styles.css",
    "build:html": "bun build src/renderer/index.html --outdir dist/renderer",
    "build:inject-css": "sed -i 's|</title>|</title>\\n  <link rel=\"stylesheet\" href=\"./styles.css\">|' dist/renderer/index.html",
    "build:renderer": "bun run build:css && bun run build:html && bun run build:inject-css",
    "build": "bun run build:main && bun run build:preload && bun run build:renderer",
    "package": "bun run build && electron-builder",
    "package:linux": "bun run build && electron-builder --linux",
    "package:mac": "bun run build && electron-builder --mac",
    "package:win": "bun run build && electron-builder --win",
    "package:all": "bun run build && electron-builder -mwl"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bun": "latest",
    "@types/node": "^24.10.1",
    "@types/uuid": "^11.0.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tw-animate-css": "^1.4.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-xml": "^6.1.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@grpc/grpc-js": "^1.14.1",
    "@grpc/proto-loader": "^0.8.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@uiw/react-codemirror": "^4.25.3",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jotai": "^2.15.1",
    "lucide-react": "^0.553.0",
    "nanoid": "^5.1.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-resizable-panels": "^3.0.6",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.hornet.app",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    }
  }
}
